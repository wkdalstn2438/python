import random
def make_map():
    game_map = []
    for i in range(9):
        game_map.append("-")
    return game_map

def print_map(m_map):
    print('------')
    print(m_map[0] + '|' + m_map[1] + '|' + m_map[2])
    print('------')
    print(m_map[3] + '|' + m_map[4] + '|' + m_map[5])
    print('------')
    print(m_map[6] + '|' + m_map[7] + '|' + m_map[8])
    print('------')

